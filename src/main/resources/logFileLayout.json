{
	"app_timestamp": {
		"$resolver": "timestamp",
		"pattern": {
			"format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
			"timezone": "UTC"
		}
	},
	"log_level" : {
		"$resolver": "level",
		"field": "name"
	},
	"thread_name": {
		"$resolver": "thread",
		"field": "name"
	},
	"tracingId": {
		"$resolver": "mdc",
		"flatten": true,
		"field": "tracing_id"
	},
	"error_message": {
		"$resolver": "exception",
		"field": "message"
	}
}